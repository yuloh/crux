{
    "name": "yuloh/crux",
    "description": "",
    "license": "MIT",
    "keywords": [
        "PSR-7",
        "middleware",
        "microframework"
    ],
    "authors": [
        {
            "name": "Matt Allan",
            "email": "matthew.james.allan@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.5.9",
        "zendframework/zend-diactoros": "^1.3",
        "psr/http-message": "^1.0",
        "container-interop/container-interop": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.1",
        "squizlabs/php_codesniffer": "~2.3",
        "yuloh/container": "^0.1.0"
    },
    "autoload": {
        "psr-4": {
            "Yuloh\\Crux\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yuloh\\Crux\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs": "phpcs --standard=psr2 src/",
        "check": [
            "@cs",
            "@test"
        ]
    }
}
